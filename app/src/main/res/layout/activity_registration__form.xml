<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="faisal.home.com.college.Registration_Form">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            >



            <TextView
                android:id="@+id/FormName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Registration Form"
                android:textSize="30dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/Spinner"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:entries="@array/panelName"
                android:prompt="@string/Student"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/NameLinear"
                android:visibility="gone">

                <TextView
                    android:id="@+id/NameTextView"
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name" />

                <EditText
                    android:id="@+id/NameEditText"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/EmailLinear"
                android:visibility="gone">

                <TextView
                    android:id="@+id/EamilTextView"
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email"

                    />

                <EditText
                    android:id="@+id/EmailEditText"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/PasswordLinear"
                android:visibility="gone">

                <TextView
                    android:id="@+id/PasswordTextView"
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Password"

                    />

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:inputType="textPassword"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/confirmLinear"
                android:visibility="gone">

                <TextView
                    android:id="@+id/ConfirmTextView"
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Confirm"

                    />

                <EditText
                    android:id="@+id/ConfirmEditText"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:inputType="textPassword"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/MobilenoLinear"
                android:visibility="gone">

                <TextView
                    android:id="@+id/MobileTextView"
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mobile no"

                    />

                <EditText
                    android:id="@+id/MobileEditText"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/SubjectLinear"
                android:visibility="gone">

                <TextView
                    android:id="@+id/SubjectTextView"
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subject"

                    />

                <EditText
                    android:id="@+id/SubjectEditText"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/AgeLinear"
                android:visibility="gone">

                <TextView
                    android:id="@+id/AgeTextView"
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Age" />

                <EditText
                    android:id="@+id/AgeEditText"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/GenderLinear"
                android:visibility="gone">

                <TextView
                    android:id="@+id/GenderTextView"
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gender" />

                <EditText
                    android:id="@+id/GenderEditText"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/YearLinear"
                android:visibility="gone">

                <TextView
                    android:id="@+id/YearTextView"
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Year" />

                <EditText
                    android:id="@+id/YearEditText"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    />
            </LinearLayout>

            <Button
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Register"
                android:layout_gravity="center_horizontal"
                android:textSize="24dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/RegisterButton"
                android:onClick="Send"
                android:background="@color/indigo"
                android:textColor="@color/colorWhite"
                android:visibility="gone"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
