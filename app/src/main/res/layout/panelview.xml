<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".Panel">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:id="@+id/PanelTitle"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/NamePanelEditText"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"

                >

                <TextView
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/EmailPanelEditText"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MobileNo"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/MobilePanelEditText"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"

                >

                <TextView
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="password"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/passwordPanelEditText"
                    android:textSize="15dp"
                    android:inputType="textPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/PanelSubjectLinear"
                android:visibility="gone"

                >

                <TextView
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subject"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/subjectpanelEditTextView"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="gone"
                android:id="@+id/PanelIssuedBookLinear"

                >

                <TextView
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Issued Book"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/issueBookPanelEditText"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="gone"
                android:id="@+id/panelYearLinear"

                >

                <TextView
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Year"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/yearPanelEditText"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:imeOptions="actionDone|flagNoExtractUi"

                    />

            </LinearLayout>


            <Button
                android:layout_width="140dp"
                android:layout_height="40dp"
               android:onClick="onSave"
                android:layout_marginTop="10dp"
                android:text="Save Changes"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_horizontal"
                android:background="@color/indigo"
                android:id="@+id/ButtonOnSave"/>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:id="@+id/PanelTeacherLinear"
              android:layout_marginTop="20dp"
              android:layout_gravity="center_horizontal"
              android:visibility="gone"
              >

              <Button
                  android:layout_width="150dp"
                  android:layout_height="40dp"
                  android:text="Book Lecture"
                  android:id="@+id/BookLectureButton"
                  android:onClick="onButtonPressed"
                  android:textColor="@color/colorWhite"
                  android:background="@color/orange"
                  android:layout_marginRight="3dp"
                  />

              <Button
                  android:layout_width="150dp"
                  android:layout_height="40dp"
                  android:text="View Lectures"
                  android:id="@+id/ViewLectureButton"
                  android:onClick="onButtonPressed"
                  android:textColor="@color/colorWhite"
                  android:background="@color/orange"
                  />

          </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/PanelStudentLinear"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                >


                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="View Lectures"
                    android:id="@+id/ViewLectureStutentButton"
                    android:onClick="onButtonPressed"

                    />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Library"
                    android:id="@+id/LibraryButton"
                    android:onClick="onButtonPressed"

                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Registraions has not been approved yet"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/TextViewNotApproved"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/linearFarg"/>

        </LinearLayout>




</LinearLayout>
